<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <RelativeLayout
        android:id="@+id/rlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp">
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/txtIcon"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textSize="70sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rlay"
        android:layout_toRightOf="@+id/rlay"
        android:layout_toEndOf="@id/rlay"
        android:textSize="@dimen/location"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/condition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rlay"
        android:layout_toEndOf="@id/rlay"
        android:textColor="@color/condition"
        android:textSize="@dimen/condition" />

</RelativeLayout>